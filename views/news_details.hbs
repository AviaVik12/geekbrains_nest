{{#if news}}
  <h1 class="card-title">{{news.title}}</h1>
  
  <h6 class="card-subtitle mb-2 text-muted">Avtor: {{news.author}}</h6>
  
  <div class="row">
    <div class="col-lg-6">
      <img 
        src="http://localhost:3000{{news.cover}}" 
        class="card-img-top" 
        style="width: 100%; object-fit: cover;" 
        alt=""
      >
    </div>
 
    <div class="col-lg-6">
      <p class="card-text">{{news.description}}</p>
    </div>
  </div>

  <form action="">
    <div class="mb-3">
		  <label for="author" class="form-label">Avtor</label>
		  <input class="form-control" name="author" id="author">
	  </div>

    <div class="mb-3">
		  <label for="message" class="form-label">Soobscenije</label>
		  <textarea class="form-control" id="message" name="message" rows="3">
      </textarea>
	  </div>

    <div class="form-group">
		  <label for="avatar">Avatarka</label>
		  <input type="file" class="form-control-file" name="avatar" id="avatar">
	  </div>

    <button type="button" class="btn btn-primary" onclick="sendForm()">
      Ostavitj kommentarij
    </button>
  </form>

  {{#if comments}}
    {{#each comments}}
      <div class="list-group">
        <a 
          href="#" 
          class="list-group-item list-group-item-action d-flex gap-3 py-3" 
          aria-current="true"
        >
          <img 
            src="
              {{#if this.avatar}}
                {{this.avatar}}
              {{else}}
                https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png
              {{/if}}
            "  
            alt="avatar" 
            width="32" 
            height="32" 
            class="rounded-circle flex-shrink-0"
          >

          <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
              <h6 class="mb-0">{{this.author}}</h6>
              <p class="mb-0 opacity-75">{{this.message}}</p>
            </div>

            <small class="opacity-50 text-nowrap">now</small>
          </div>
        </a>
      </div>
    {{/each}}
  {{else}}
    <h6>Spisok kommentarijev pust</h6>
  {{/if}}
{{/if}}

<script>
	function sendForm() {
		var data = new FormData($('form')[0]);

    const idNews = window.location.pathname.split('/').reverse()[0];

		$.ajax({
			url: '/comments/api/' + idNews, 
			data: data, 
			cache: false, 
			contentType: false, 
			processData: false, 
			method: 'POST', 
			success: function() {
				window.location.reload();
			}
		});
	}
</script>
